<Window
    x:Class="BigZipUI.Dialogs.ConfirmDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Confirm"
    Width="350"
    Height="150"
    CanResize="False"
    WindowStartupLocation="CenterOwner"
    Icon="avares://ui/Assets/favicon.ico">

    <StackPanel Margin="20" Spacing="12">
        <TextBlock
            x:Name="MessageTextBlock"
            TextWrapping="Wrap"
            TextAlignment="Center" />

        <TextBlock
            x:Name="QuestionTextBlock"
            TextWrapping="Wrap"
            TextAlignment="Center"
            FontWeight="SemiBold" />

        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                x:Name="YesButton"
                MinWidth="80"
                Content="Yes"
                IsDefault="True" />
            <Button
                x:Name="NoButton"
                MinWidth="80"
                Content="No"
                IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
